---
import { SvgGithub } from "./icons/Github.tsx";
import { SvgFacebook } from "./icons/Facebook.tsx";
import { SvgLinkedIn } from "./icons/LinkedIn.tsx";
import { SvgX } from "./icons/X.tsx";
import {
  SvgTwitter,
  SvgArrowRightStraight,
} from "@guardian/source/react-components";
---

<ul id="social-presence">
  <li>
    <a href="#" target="_blank">
      <span class="hidden">Github @sesoc-ousl</span>
      <SvgGithub />
    </a>
  </li>
  <li>
    <a href="#" target="_blank">
      <span class="hidden">Facebook @sesoc-ousl</span>
      <SvgFacebook />
    </a>
  </li>
  <li>
    <a href="#" target="_blank">
      <span class="hidden">LinkedIn @sesoc-ousl</span>
      <SvgLinkedIn />
    </a>
  </li>
  <li>
    <a href="#" target="_blank">
      <span class="hidden">Twitter @sesoc-ousl</span>
      <SvgX />
    </a>
  </li>
  <li>
    <a href="#" target="_blank" class="pill">
      <span>Be a Member</span>
      <SvgArrowRightStraight />
    </a>
  </li>
</ul>

<h1>Software Engineering Society of&hairsp;<span class="white"> OUSL</span></h1>

<style lang="scss">
  ul {
    list-style-type: none;
    padding: 0;
    padding-right: 0.5em;
    display: flex;
    gap: 1em;
  }

  li {
    a {
      display: flex;
      align-items: center;
      justify-content: center;
      min-width: 2.5rem;
      height: 2.5rem;
      border-radius: 3rem;
      padding: 0.25rem;
      background: #ccc;
      color: #111;
      text-decoration: none;

      &:hover {
        background: gold;
      }

      span {
        padding: 0 0.5em;
        font-weight: bold;
      }

      &.pill {
        padding: 0.25rem 0.75rem;
      }

      span.hidden {
        position: absolute;
        top: 0;
        left: 0;
        opacity: 0;
      }

      :global(svg) {
        width: 2rem;
        height: 2rem;
      }
    }
  }

  h1 {
    font-size: clamp(1.25rem, 5vw, 2rem);
  }

  .white {
    color: white;
  }
</style>
